<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.eclipse.daanse</groupId>
		<artifactId>org.eclipse.daanse.xmla.ws</artifactId>
		<version>${revision}</version>
	</parent>
	<artifactId>org.eclipse.daanse.xmla.ws.jakarta.model.xsd</artifactId>
	<dependencies>
		<dependency>
			<groupId>jakarta.xml.bind</groupId>
			<artifactId>jakarta.xml.bind-api</artifactId>
		</dependency>
	</dependencies>
	<build>
		<resources>
			<resource>
				<directory>src/main/xsd</directory>
				<targetPath>META-INF/JAXB/xsd/</targetPath>
			</resource>
			<resource>
				<directory>src/main/dtd</directory>
				<targetPath>META-INF/JAXB/dtd/</targetPath>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
			</resource>
		</resources>
		<sourceDirectory>target/generated-sources/jaxb</sourceDirectory>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jaxb2-maven-plugin</artifactId>
				<version>3.1.0</version>
				<executions>
					<execution>
						<id>xsd-to-java</id>
						<goals>
							<goal>xjc</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<xsdPathWithinArtifact>META-INF/JAXB/xsd</xsdPathWithinArtifact>
					<laxSchemaValidation>true</laxSchemaValidation>
					<packageName>org.eclipse.daanse.xmla.ws.jakarta.model.xsd</packageName>
					<extension>true</extension>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>